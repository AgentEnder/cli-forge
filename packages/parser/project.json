{
  "name": "parser",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/parser/src",
  "projectType": "library",
  "release": {
    "version": {
      "generatorOptions": {
        "packageRoot": "dist/@cli-forge/{projectName}",
        "currentVersionResolver": "git-tag"
      }
    }
  },
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/@cli-forge/parser",
        "main": "packages/parser/src/index.ts",
        "tsConfig": "packages/parser/tsconfig.lib.json",
        "assets": ["packages/parser/*.md"]
      }
    },
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/@cli-forge/{projectName}"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/packages/parser"
      }
    }
  }
}
